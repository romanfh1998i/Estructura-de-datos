<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Categorías</title>
    <style>
        body { 
            font-family: Arial, sans-serif; 
            line-height: 1.6; 
            margin: 0; 
            padding: 20px; 
        }
        h1, h2, h3 { 
            color: #333; 
        }
        form { 
            margin-bottom: 20px; 
        }
        input, button { 
            margin: 5px 0; 
            padding: 5px; 
        }
        ul { 
            list-style-type: none; 
            padding: 0; 
        }
        li { 
            margin-bottom: 10px; 
        }
        a { 
            color: #007bff; 
            text-decoration: none; 
        }
        a:hover { 
            text-decoration: underline; 
        }
        nav {
            margin-bottom: 20px;
        }
        nav a {
            margin-right: 10px;
        }
    </style>

</head>
<body>
    <h1>Categorías</h1>
    <form action="/add-to-category" method="POST">
        <input type="text" name="category" placeholder="Categoría" required>
        <input type="text" name="subcategory" placeholder="Subcategoría" required>
        <input type="text" name="title" placeholder="Título" required>
        <input type="text" name="description" placeholder="Descripción">
        <input type="number" name="priority" placeholder="Prioridad" required>
        <input type="date" name="dueDate" required>
        <button type="submit">Añadir Tarea a Categoría</button>
    </form>
    <div>
        <% for (let [category, subcategories] of categoryTree) { %>
            <h2><%= category %></h2>
            <% for (let [subcategory, tasks] of subcategories) { %>
                <h3><%= subcategory %></h3>
                <ul>
                    <% tasks.forEach(tasks => { %>
                        <li><%= tasks.title %> - Prioridad: <%= tasks.priority %>, Fecha: <%= tasks.dueDate %></li>
                    <% }); %>
                </ul>
            <% } %>
        <% } %>
    </div>
    <a href="/">Volver al inicio</a>
</body>
</html>